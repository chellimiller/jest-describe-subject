{
  "name": "root",
  "version": "0.1.0",
  "description": "Libraries to make it easier to write Jest tests.",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces",
    "lint:format:root": "prettier --check * .vscode/* --cache",
    "lint:format": "npm run lint:format:root && npm run lint:format --workspaces --if-present",
    "lint:standards:root": "eslint",
    "lint:standards": "npm run lint:standards:root && npm run lint:standards --workspaces --if-present",
    "lint:root": "npm run lint:format:root && npm run lint:standards:root",
    "lint": "npm run lint:root && npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "nuke": "git clean -fxd",
    "setup": "npm install --workspaces --include-workspace-root && npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chellimiller/jest-describe-subject.git"
  },
  "keywords": ["jest", "typescript", "test", "describe", "subject"],
  "author": {
    "name": "Michelle Miller",
    "url": "https://github.com/chellimiller"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chellimiller/jest-describe-subject/issues"
  },
  "homepage": "https://github.com/chellimiller/jest-describe-subject#readme",
  "workspaces": [
    "packages/jest-describe-subject",
    "packages/jest-describe-subject-demo"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
